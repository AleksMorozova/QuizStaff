<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
  <log4net>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="LogFileAppender" />
    </root>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
      <param name="File" value="C:\QuizStaffLog\" />
      <datePattern value="dd_MM_yyyy'.log'" />
      <param name="AppendToFile" value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
  </log4net>
  
  <appSettings>
    <add key="Lang" value="ru-RU" />
  </appSettings>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_IApplicationServer" />
            </basicHttpBinding>
        </bindings>
        <client>
          <!---http://dws01.edu.isd.dp.ua:8733/Design_Time_Addresses/Server/ApplicationServer/-->
            <endpoint address="http://dws01:8733/Design_Time_Addresses/Server/ApplicationServer/"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_IApplicationServer"
                contract="ServiceReference.IApplicationServer" name="BasicHttpBinding_IApplicationServer" />
        </client>
    </system.serviceModel>
</configuration>